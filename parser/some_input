load_model "resources/dragon/dragon.obj" dragon;
load_model "resources/cowcow/cow.obj" cow;

camera cam1
{
	position: 0 0 -10;
	direction: 0 0 1;
	depth: 1000;
}

camera cam2
{
	position: 0 0 -10;
	direction: 0 0 1;
	depth: 1000;
}

animation cow_scale
{
	interpolate 10 { scale cow 0.01 0.01 0.01; }
}

add_to_timeline cow_scale 2;
set_default_camera cam1;
